{
  "name": "skeldjs",
  "version": "1.2.1",
  "main": "index.js",
  "license": "GPL-3.0-only",
  "private": true,
  "scripts": {
    "lint": "eslint \"packages/**/*.ts\"",
    "lint-staged": "lint-staged",
    "fix": "prettier --write \"packages/**/*.ts\"",
    "test": "ts-mocha --config ./.mocharc.json",
    "coverage": "nyc yarn test",
    "build-all": "yarn workspaces foreach -ptv run build",
    "update:patch": "yarn workspaces foreach version patch",
    "update:minor": "yarn workspaces foreach version minor",
    "update:major": "yarn workspaces foreach version major",
    "publish-all": "yarn workspaces foreach --no-private npm publish --access public",
    "postinstall": "husky install",
    "docs": "typedoc"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@strictsoftware/typedoc-plugin-monorepo": "^0.4.1",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "husky": "^5.0.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typedoc-plugin-remove-references": "^0.0.5",
    "typedoc-plugin-yarn": "portal:./typedoc-plugin-yarn",
    "typescript": "^4.1.3"
  },
  "dependenciesMeta": {
    "highlight.js": {
      "built": false
    },
    "onigasm": {
      "unplugged": false
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.ts": "eslint packages/**/*.ts"
  },
  "workspaces": [
    "packages/*"
  ]
}
